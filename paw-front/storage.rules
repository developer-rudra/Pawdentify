rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Users can upload and read their own images
    match /users/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Public read access for breed images
    match /breeds/{allPaths=**} {
      allow read: if true;
      allow write: if false; // Only admins can upload breed images
    }
  }
}